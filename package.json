{
    "name": "@vue-environment-indicator/root",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "npm --prefix ./packages/vue-environment-indicator/ run build",
        "test": "npm --prefix ./packages/vue-environment-indicator/ run test",
        "test:once": "npm --prefix ./packages/vue-environment-indicator/ run test:once",
        "test:coverage": "npm --prefix ./packages/vue-environment-indicator/ run test:coverage",
        "release": "npm --prefix ./packages/vue-environment-indicator/ run release",
        "dev": "npm --prefix ./packages/playground/ run dev",
        "preview": "npm --prefix ./packages/playground/ run preview"
    },
    "devDependencies": {
        "@tsconfig/node22": "^22.0.1",
        "@types/jsdom": "^21.1.7",
